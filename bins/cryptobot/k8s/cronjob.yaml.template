apiVersion: batch/v1
kind: CronJob
metadata:
  name: {{CRONJOB_NAME}}
spec:
  schedule: "*/15 * * * *"
  concurrencyPolicy: Replace
  startingDeadlineSeconds: 10
  jobTemplate:
    spec:
      template:
        spec:
          containers:
          - name: algotrap-cryptobot
            image: ghcr.io/innoobwetrust/algotrap-cryptobot:latest
            imagePullPolicy: Always
            envFrom:
            - secretRef:
                name: {{SECRET_NAME}}
          restartPolicy: Never
